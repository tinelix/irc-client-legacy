<resources>
    <style name="IRCClient" parent="@android:style/Theme.NoTitleBar">
        <item name="android:color">@color/gray</item>
        <item name="android:alertDialogStyle">@style/IRCClient.Dialog</item>
        <item name="android:textAppearance">@style/IRCClient.TextAppearance</item>
        <item name="android:tabWidgetStyle">@style/IRCClient.TabWidget</item>
        <item name="android:checkboxStyle">@style/IRCClient.CheckBox</item>
        <item name="android:preferenceStyle">@style/IRCClient.Preference</item>
        <item name="android:checkBoxPreferenceStyle">@style/IRCClient.CheckBoxPreference</item>
    </style>
    <style name="IRCClient.TabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:background">@drawable/tabwidget</item>
    </style>
    <style name="IRCClient.Notification" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="IRCClient.Button" parent="@android:style/Widget.Button">
        <item name="android:background">#00000000</item>
        <item name="android:color">#ffffff</item>
    </style>
    <style name="IRCClient.TextArea" parent="@android:style/Widget.EditText">
        <item name="android:background">#2f2f2f</item>
        <item name="android:color">#ffffff</item>
        <item name="android:padding">6px</item>
    </style>
    <style name="IRCClient.TextArea.Transparent" parent="@android:style/Widget.EditText">
        <item name="android:background">#2f2f2f</item>
        <item name="android:color">#ffffff</item>
        <item name="android:padding">6px</item>
    </style>
    <style name="IRCClient.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:color">#ffffff</item>
    </style>
    <style name="IRCClient.Spinner">
        <item name="android:clickable">true</item>
    </style>

    <style name="IRCClient.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_margin">0px</item>
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@color/gray_v2</item>
        <item name="android:bottomMedium">@color/gray_v2</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@color/gray_v2</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:fullBright">@color/gray_v2</item>
        <item name="android:fullDark">@color/gray_v2</item>
        <item name="android:topDark">@color/gray_v2</item>
        <item name="android:textAppearance">@android:color/white</item>
        <item name="android:buttonStyle">@color/title_v11_full_transparent</item>
    </style>

    <style name="IRCClient.Light" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:alertDialogStyle">@style/IRCClient.Light.Dialog</item>
        <item name="android:listViewStyle">@style/IRCClient.Light.ListView</item>
        <item name="android:textAppearance">@style/IRCClient.Light.TextAppearance</item>
        <item name="android:checkboxStyle">@style/IRCClient.CheckBox</item>
        <item name="android:checkBoxPreferenceStyle">@style/IRCClient.CheckBoxPreference</item>
        <item name="android:preferenceStyle">@style/IRCClient.Preference</item>
    </style>

    <style name="IRCClient.Light.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_margin">0px</item>
        <item name="android:bottomBright">@android:color/black</item>
        <item name="android:bottomDark">@color/white</item>
        <item name="android:bottomMedium">@color/white</item>
        <item name="android:centerBright">@android:color/black</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:centerMedium">@android:color/black</item>
        <item name="android:fullBright">@color/white</item>
        <item name="android:fullDark">@color/white</item>
        <item name="android:topDark">@color/white</item>
        <item name="android:textAppearance">@style/IRCClient.Light.TextAppearance</item>
        <item name="android:buttonStyle">@color/white</item>
    </style>

    <style name="IRCClient.Light.ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@color/white</item>
    </style>

    <style name="IRCClient.Light.TextArea" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/white_90</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="IRCClient.Light.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="IRCClient.CheckBox">
        <item name="android:paddingLeft">20px</item>
    </style>

    <style name="IRCClient.Preference">
        <item name="android:layout">@layout/pref_widget</item>
    </style>

    <style name="IRCClient.CheckBoxPreference">
        <item name="android:layout">@layout/checkbox_prefw</item>
    </style>


</resources>
